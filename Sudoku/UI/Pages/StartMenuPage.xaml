<Page x:Class="Sudoku.UI.Pages.StartMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="880"
      Title="StartMenuPage"
      Background="#FF1E1E1E">
    <!-- Тёмный фон для контраста -->
    
    <Grid>
        <!-- Основной контейнер с вертикальным расположением элементов -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Заголовок игры -->
            <TextBlock Text="SUDOKU" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Кнопка "Играть" -->
            <Button Content="Играть" x:Name="PlayBtn"
                    Click="PlayBtn_Click"
                    Width="200" 
                    Height="50" 
                    Margin="0,0,0,20"
                    FontSize="20"
                    Background="#FF3A3A3A"
                    Foreground="White"
                    BorderBrush="#FF555555"/>

            <!-- Кнопка "Настройки" -->
            <Button Content="Настройки" x:Name="SettingBtn"
                    Click="SettingBtn_Click"
                    Width="200" 
                    Height="50" 
                    Margin="0,0,0,20"
                    FontSize="20"
                    Background="#FF3A3A3A"
                    Foreground="White"
                    BorderBrush="#FF555555"/>

            <!-- Кнопка "Сбросить прогресс" -->
            <Button Content="Сбросить прогресс" 
                    Width="200" 
                    Height="50" 
                    FontSize="16"
                    Background="#FF3A3A3A"
                    Foreground="White"
                    Click="ResetBtn_Click"
                    BorderBrush="#FF555555"/>
        </StackPanel>
    </Grid>
</Page>